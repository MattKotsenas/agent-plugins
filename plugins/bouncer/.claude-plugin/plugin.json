{
  "name": "bouncer",
  "version": "1.0.0",
  "description": "PreToolUse hook that blocks dangerous tool calls with fast rules and LLM fallback.",
  "author": {
    "name": "Bouncer"
  },
  "license": "MIT",
  "keywords": [
    "hooks",
    "security",
    "pretooluse",
    "copilot",
    "claude"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/scripts/bouncer-hook.sh\""
          }
        ]
      }
    ]
  }
}
